<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.bankapp.activity.LoginActivity">

    <TextView
        android:id="@+id/textAccNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/accountNo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="ACCOUNT NO : "
        android:textSize="15dp" />

    <EditText
        android:id="@+id/accountNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/accPass"
        android:layout_alignLeft="@+id/accPass"
        android:layout_alignStart="@+id/accPass"
        android:ems="10" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/accPass"
        android:layout_toStartOf="@+id/accPass"
        android:text="PASSWORD : "
        android:textSize="15dp" />


    <EditText
        android:id="@+id/accPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textPassword"
        android:layout_alignBottom="@+id/textPassword"
        android:layout_toEndOf="@+id/textAccNo"
        android:layout_toRightOf="@+id/textAccNo"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="DEMO BANK"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:onClick="login"
        android:text="LOGIN" />
</RelativeLayout>
